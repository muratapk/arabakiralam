{
    <h1>@item.PlateNumber</h1>
}
 *@
 <div class="container-fluid">
     <div class="row mt-5 pt-5">
         <div class="col-2">

            @await Component.InvokeAsync("CarSelectList")

         </div>
         <div class="col-10">
             <div id="sonuc">

             <a href="/CarDetails/AddToList" class="btn btn-outline-warning">Sepette Git</a>
             <div class="container">
                 <div class="row">
                     <div class="col-12">
                         <form>
                             <input type="text" class="form-control" id="keyword" name="search"  placeholder="Arama Yap"/>
                             <button class="btn btn-success"id="ara"> Arama</button>
                         </form>
                     </div>
                 </div>
             </div>
             <table class="table">
                 <thead class="thead-dark">
                    <tr>
                        <td>Resimi</td>
                        <td>Plakası</td>
                        <td>Yılı</td>
                        <td>Günlük Ücreti</td>
                        <td>Sepet</td>
                    </tr>
                 </thead>
                 
                 @foreach(var item in Model)
                {
                    <tr>
                        <td>@if(item.CarImages!=null && item.CarImages.Any())
                            {
                             <img src="@item.CarImages.First().CarImagesUrl" height="200" width="200"/>    
                            
                            }
                            else
                            {
                                <img src="/Images/resim_yok.jpg" height="200" width="200"/>
                            }
                        </td>
                        <td>@item.PlateNumber</td>
                        <td>@item.Year</td>
                        <td>@item.DailyPrice</td>
                        <td><a href="#" class="btn btn-warning sepet" data-id="@item.CarId">Sepet</a></td>
                    </tr>
                }
            </table>
            </div>
         </div>
     </div>
 </div>